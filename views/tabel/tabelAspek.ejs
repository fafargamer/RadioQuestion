<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>GCG Data</title>
  <meta name="description" content="The HTML5 Herald">
  <meta name="author" content="SitePoint">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link href="/css/style.css" rel="stylesheet" type="text/css" crossorigin>

  <style>
      body {
            background-color: rgb(255, 255, 255)
        }
  </style>

</head>


<body>      
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active"><a aria-current="/">Home</a></li>
        </ol>
      </nav>

        <div class="container mt-5">
            <h2>GCG Data</h2>  <a class="btn btn-success" href="/addAspek" role="button" style="float: right;">+</a>            
            <table class="table table-condensed">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Aspek</th>
                    <th>Jumlah Indikator</th>                    
                    <th>Bobot</th>
                    <th>Nilai</th>
                    <th>Individu</th>
                </tr>
            </thead>
            <tbody>
                <% result.forEach(function(row, i) { %> 
                <tr>
                    <td><%=row.index%></td>
                    <td><%=row.aspek%></td>
                    <td><%=row.jumlahIndikator%></td>
                    <td><%=row.bobot%></td>
                    <td><%=row.nilai%></td>
                    <td>nilai Individu</td>
                    <td>
                        <a class="btn btn-primary" href="/<%=row.index%>/" role="button">Detail</a>
                    </td>
                    <td>
                        <!-- Button trigger modal -->
                      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalAspek<%=i+1%>">
                        Hapus
                      </button>

                      <!-- Modal -->
                      <div class="modal fade" id="modalAspek<%=i+1%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Yakin hapus data berikut:</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              Aspek <%=row.index%> : <%=row.aspek%>
                            </div>
                            <div class="modal-footer">
                              <a type="button" class="btn btn-secondary" data-dismiss="modal">Close</a>
                              <a type="button" class="btn btn-danger" href="/hapusAspek/<%=row.index%>">Hapus data</a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </td>
                </tr>
                <% }); %> 
            </tbody>
            </table>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
      
        <!-- <script>
            $(document).ready(function() {
      
            }
        </script> -->
      
      </body>
</html>    